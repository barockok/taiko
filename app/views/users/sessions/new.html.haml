.container
  .row
    .col-md-4.col-md-offset-4
      .login-box
        .login-box-header
          %h1 Sign in
        .login-box-body
          = simple_form_for(resource, as: resource_name, url: session_path(resource_name) , html: { class: '' }, wrapper: :vertical_form, wrapper_mappings: {boolean: :vertical_boolean}) do |f|
            =f.input :email
            =f.input :password
            - if devise_mapping.rememberable?
              =f.input :remember_me, as: :boolean
            %hr
            =f.button :submit, 'Sign in'
          = render "users/shared/links"
